// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  socialLogin String?
  level       Int       @default(0)
  name        String    @unique
  email       String    @unique
  password    String
  posts       Post[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  likes       Like[]
  comments    Comment[]
}

model Post {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  readCount   Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime?  @updatedAt
  isExpired   Boolean    @default(false)
  likes       Like[]
  comments    Comment[]
  frontends   Frontend[]
  backends    Backend[]
  apps        App[]
}

model Like {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  userId    Int
  postId    Int

  @@unique([userId, postId])
}

model Comment {
  id        Int       @id @default(autoincrement())
  comment   String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  userId    Int
  postId    Int
}

model Frontend {
  id    Int    @id @default(autoincrement())
  skill String @unique
  posts Post[]
}

model Backend {
  id    Int    @id @default(autoincrement())
  skill String @unique
  posts Post[]
}

model App {
  id    Int    @id @default(autoincrement())
  skill String @unique
  posts Post[]
}
